{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "config": {
        "title": {"font": "sans-serif", "fontSize": 14}
    },
    "title": {
        "text": "Total Worldwide Box Office from Domestically Produced Films per Number of Domestically Produced Films (1899 - 2024)"
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/refs/heads/main/Data/ne_110m_border.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "#e2e0e0",
                "strokeOpacity": 0.7,
                "strokeWidth": 1,
                "fill": "transparent"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/refs/heads/main/Data/ne_110m_border.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_wgs84_bounding_box"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "#e2e0e0",
                "strokeOpacity": 1,
                "strokeWidth": 1,
                "fill": "lightblue",
                "fillOpacity": 0.6
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/refs/heads/main/Data/ne_110m_border.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Country"}
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/refs/heads/main/Data/ne_110m_border.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/main/Data/Updated_BoxOfficeByCountry.csv"
                        },
                        "key": "productionCountries",
                        "fields": [
                            "numMovies",
                            "worldwideBoxOffice"
                        ]
                    }
                },
                {
                    "calculate": "datum.worldwideBoxOffice/datum.numMovies",
                    "as": "boxOfficePerMovie"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "type": "quantitative",
                    "field": "boxOfficePerMovie",
                    "scale": {
                        "domain": [1000000, 5000000, 10000000, 15000000, 20000000, 25000000],
                        "range": ["#c7e9c0", "#a1d99b", "#74c476", "#41ab5d", "#238b45", "#006d2c", "#00441b"]
                        },    
                    "legend": {
                        "title": [
                            "Worldwide USD Generated from Domestically Produced",
                            "Films per Number of Domestically Produced Movies"
                        ],
                        "format": "~s",
                        "titleLimit": 400 
                    }
                    
                    },
                "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                    {"field": "boxOfficePerMovie", "type": "quantitative", "title": "Worldwide USD per Domestically Produced Film", "format": "$,.0f"}
                ]
            }
        },
        {
            "data": {
                    "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/main/Data/Updated_BoxOfficeByCountry.csv"
                    },
            "transform": [
                {
                    "calculate": "datum.worldwideBoxOffice/datum.numMovies",
                    "as": "boxOfficePerMovie"
                },
                {
                    "lookup": "productionCountries",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/refs/heads/main/Data/ne_110m_border.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME",
                        "fields": ["properties"]
                    }
                },
                {
                    "window": [
                        {
                            "op": "rank",
                            "as": "ranking"
                        }
                    ],
                    "sort": [
                        {
                            "field": "boxOfficePerMovie",
                            "order": "descending"
                        }
                    ]
                },
                {
                    "filter": "datum.ranking == 1"
                },
                {
                    "calculate": "'The highest;worldwide box office from;domestically produced films;is ' + datum['productionCountries'] + ', ;with a total of ' + format(datum['boxOfficePerMovie'], '$,.0f') + ' per;domestically produced movie.'",
                    "as": "text_annotation_raw"
                },
                {
                    "calculate": "split(datum.text_annotation_raw, ';')",
                    "as": "text_annotation"
                }

            ],
            "mark": {
                "type": "text",
                "align": "center",
                "dx": -110,
                "dy": -15,
                "fontSize": 8,
                "fontStyle": "italic"
            },
            "encoding": {
                "longitude": {"field": "properties.LABEL_X"},
                "latitude": {"field": "properties.LABEL_Y"},
                "color": {
                    "value": "gray"
                },
                "text": {"field": "text_annotation"}
            }
        },
        {
            "data": {
                    "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/main/Data/Updated_BoxOfficeByCountry.csv"
                    },
            "transform": [
                {
                    "calculate": "datum.worldwideBoxOffice/datum.numMovies",
                    "as": "boxOfficePerMovie"
                },
                {
                    "lookup": "productionCountries",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/refs/heads/main/Data/ne_110m_border.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME",
                        "fields": ["properties"]
                    }
                },
                {
                    "window": [
                        {
                            "op": "rank",
                            "as": "ranking"
                        }
                    ],
                    "sort": [
                        {
                            "field": "boxOfficePerMovie",
                            "order": "descending"
                        }
                    ]
                },
                {
                    "filter": "datum.productionCountries == 'Australia'"
                },
                {
                    "calculate": "'Australia ranks ' + datum.ranking + 'th in; worldwide box office from ;domestically produced films,; with a total of ' + format(datum['boxOfficePerMovie'], '$,.0f') + ' per;domestically produced movie.'",
                    "as": "text_annotation_raw"
                },
                {
                    "calculate": "split(datum.text_annotation_raw, ';')",
                    "as": "text_annotation"
                }

            ],
            "mark": {
                "type": "text",
                "align": "center",
                "dx": -110,
                "dy": -10,
                "fontSize": 8,
                "fontStyle": "italic"
            },
            "encoding": {
                "longitude": {"field": "properties.LABEL_X"},
                "latitude": {"field": "properties.LABEL_Y"},
                "color": {
                    "value": "gray"
                },
                "text": {"field": "text_annotation"}
            }
        }
    ]
}