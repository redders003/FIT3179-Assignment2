
  {
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 200,
    "data": {
      "url": "Data/Updated_AusBudgetSpending.csv"
    },
    "transform": [
      {
        "filter": {"field": "spendLocation", "oneOf": ["inAus", "outAus"]}
      }
    ],
    "mark": "area",
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "axis": {"format": "%Y", "title": "Year"}
      },
      "y": {
        "aggregate": "sum",
        "field": "amount",
        "type": "quantitative",
        "axis": {"title": "Total Spending"}
      },
      "color": {
        "field": "spendLocation",
        "type": "nominal",
        "scale": {"scheme": "category20b"},
        "legend": {"title": "Spending Location"}
      }
    }
  }
  
  