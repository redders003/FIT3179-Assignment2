{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 250,
    "title": {
        "text": "Spending Location of Australian Film Budgets from 1996 - 2023"
    },
    "config": {
        "background": "#f5f5f5",
        "title": {"font": "sans-serif", "fontSize": 14}
    },
    "data": {
      "url": "https://raw.githubusercontent.com/redders003/FIT3179-Assignment2/refs/heads/main/Data/Updated_AusBudgetSpending.csv"
    },
    "transform": [
      {
        "fold": ["spendInAus", "spendOutAus"],
        "as": ["spendLocation", "amount"]
      }
    ],
    "mark": "area",
    "encoding": {
      "x": {
        "field": "year",
        "type": "temporal",
        "timeUnit": "year",
        "axis": {
            "title": "",
            "tickCount": "year"
        }
      },
      "y": {
        "aggregate": "sum",
        "field": "amount",
        "type": "quantitative",
        "axis": {
          "title": "Spending (AUD)"
        }
      },
      "color": {
        "field": "spendLocation",
        "type": "nominal",
        "legend": {
          "title": "Spending Location",
          "labelExpr": "datum.label === 'spendInAus' ? 'Spent In Australia' : 'Spent Outside Australia'"
        },
        "scale": {
        "domain": ["spendInAus", "spendOutAus"],
        "range": ["#49967E", "#964961"]
        }
      },
      "tooltip": [
        {
          "field": "amount",
          "type": "quantitative",
          "title": "Spending",
          "format": ".2s"
        },
        {
          "field": "year",
          "type": "temporal",
          "title": "Year",
          "timeUnit": "year"
        }
      ]
    }
  }
  